<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/icon_above_card_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/robot"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Icon" />

        <LinearLayout
            android:id="@+id/left_chat_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_above_card_left"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/bg_gradient_chat"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/left_chat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hallo nama saya rahul"
                android:textIsSelectable="true"
                android:fontFamily="@font/poppins_reguler"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:padding="4dp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/icon_above_card_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/people"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Icon" />

        <LinearLayout
            android:id="@+id/right_chat_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_above_card_right"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/bg_gradient_chat"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/right_chat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, saya di sisi kanan"
                android:textIsSelectable="true"
                android:fontFamily="@font/poppins_reguler"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:padding="4dp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>